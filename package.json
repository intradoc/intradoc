{
  "name": "intradoc",
  "version": "0.0.0-development",
  "description": "In-place document content replacer CLI utility.",
  "author": "Richard King <richrdkng@gmail.com> (https://richrdkng.com)",
  "license": "MIT",
  "bin": "bin",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/intradoc/intradoc.git"
