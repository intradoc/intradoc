    "@semantic-release/git": "^10.0.1",
    "@tsconfig/node18": "^2.0.0",
    "@types/fs-extra": "^11.0.1",
    "@types/jest": "^29.5.1",
    "@types/node": "^18.16.0",
    "execa": "^5.1.1",
    "fs-extra": "^11.1.1",
