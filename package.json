    "semantic-release": "^21.0.1",
    "snazzy": "^9.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "ts-standard": "^12.0.2",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.5.0",
    "typescript": "^5.0.4"
